{
  "name": "dd33-b",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "author": {
    "name": "Robin Millette",
    "email": "robin@millette.info",
    "url": "http://robin.millette.info"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "build": "parcel build --no-source-maps --experimental-scope-hoisting --public-url ./ index.html",
    "clean": "rm -fr .cache dist",
    "deploy": "npm run clean && npm run build && gh-pages -d dist",
    "start": "CHOKIDAR_USEPOLLING=yes parcel index.html # workaround https://github.com/parcel-bundler/parcel/issues/1743#issuecomment-441278085"
  },
  "dependencies": {
    "bulma": "^0.7.5",
    "d3-drag": "^1.2.3",
    "d3-force": "^2.0.1",
    "d3-scale": "^3.0.0",
    "d3-scale-chromatic": "^1.3.3",
    "d3-selection": "^1.4.0",
    "d3-timer": "^1.0.9",
    "d3-zoom": "^1.7.3",
    "graphql": "^14.4.2",
    "lodash-es": "^4.17.14",
    "riot": "3.13.2"
  },
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "graphql-tag": "^2.10.1",
    "husky": "2.7.0",
    "lint-staged": "^9.2.0",
    "node-sass": "^4.12.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-purgecss": "^2.1.2",
    "parcel-plugin-tag": "^1.2.0",
    "prettier": "^1.18.2"
  },
  "lint-staged": {
    "*.{js,json,md,html,graphql,tag,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "arrowParens": "always",
    "overrides": [
      {
        "files": "tags/*.tag",
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "purgecss": {
    "content": [
      "*.html",
      "tags/*.tag"
    ]
  },
  "sass": {
    "includePaths": [
      "./node_modules/bulma"
    ]
  },
  "browserslist": [
    ">1%",
    "not ie 11",
    "not op_mini all"
  ]
}
